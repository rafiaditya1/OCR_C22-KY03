<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".module.ktp.KtpActivity">

    <ProgressBar
        android:id="@+id/progress_bar"
        style="?android:attr/progressBarStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <TextView
        android:id="@+id/tvPrepareKTP"
        style="@style/Text.Header"
        android:layout_marginTop="35dp"
        android:gravity="center"
        android:text="@string/prepare_your_ktp"
        android:textColor="@color/primary_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvMakeSure"
        style="@style/Text.Description"
        android:layout_width="196dp"
        android:layout_marginTop="25dp"
        android:gravity="center"
        android:text="@string/make_sure_your_ktp_card_is_in_good_condition"
        android:textColor="@color/light_grey"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvPrepareKTP" />

    <ImageView
        android:id="@+id/ivScan"
        android:layout_width="312dp"
        android:layout_height="300dp"
        android:layout_marginTop="70dp"
        android:contentDescription="@string/icon_scan"
        android:src="@drawable/ic_scan_ktp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMakeSure" />

    <com.bangkit.ocr_c22_ky03.module.customView.CustomEditText
        android:id="@+id/edt_nik"
        android:layout_width="300dp"
        android:layout_height="40dp"
        android:background="@drawable/bg_edit_text"
        android:hint="Enter your NIK"
        style="@style/Text.Description"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivScan" />


    <com.bangkit.ocr_c22_ky03.module.customView.CustomButton
        android:id="@+id/btnScan"
        style="@style/Text.SubHeader"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="110dp"
        android:enabled="false"
        android:background="@drawable/rounded_button"
        android:text="@string/start_scan_ktp"
        android:textAllCaps="false"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivScan" />

    <!--    Scan Result-->

    <androidx.constraintlayout.utils.widget.ImageFilterView
        android:id="@+id/ivResult"
        android:layout_width="320dp"
        android:layout_height="400dp"
        android:layout_margin="36dp"
        android:src="@drawable/ic_baseline_image_24"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tvMakeSure" />

