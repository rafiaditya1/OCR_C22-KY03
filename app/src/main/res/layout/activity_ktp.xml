<!--            android:gravity="center"-->
<!--            android:text="@string/pastikan_foto_ktp_jelas_tidak_blur_dan_tidak_glare" />-->
<!--    </LinearLayout>-->

    <Button
        android:id="@+id/btnTryAgain"
        style="@style/Button.Border"
        app:backgroundTint="@null"
        android:layout_marginTop="30dp"
        android:text="@string/try_again"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ivResult" />

    <Button
        android:id="@+id/btnNext"
        style="@style/Text.SubHeader"
        android:layout_width="230dp"
        android:layout_height="40dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/rounded_button"
        android:text="@string/next"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnTryAgain" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_begin="431dp" />


</androidx.constraintlayout.widget.ConstraintLayout>