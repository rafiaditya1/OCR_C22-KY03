<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/primary_blue"
    tools:context=".module.main.MainActivity">

    <TextView
        android:id="@+id/title_home"
        style="@style/Text.Title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="40dp"
        android:text="@string/title_home"
        android:textColor="@color/white"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/logo_traveloka"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:contentDescription="@string/logo_traveloka"
        android:src="@drawable/logo_traveloka"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_home" />

    <ImageView
        android:id="@+id/logo_ocr"
        android:layout_width="200dp"
        android:layout_height="20dp"
        android:contentDescription="@string/logo_ocr"
        android:src="@drawable/logo_ocr"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/logo_traveloka" />


    <ImageView
        android:id="@+id/img_ktp"
        android:layout_width="330dp"
        android:layout_height="210dp"
        android:layout_marginTop="40dp"
        android:contentDescription="@string/welcome_image"
        android:src="@drawable/logo_ktp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/logo_ocr" />

    <Button
        android:id="@+id/btn_add"
        style="@style/Button.Large"
        android:layout_marginTop="120dp"
        android:text="@string/add_verification"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/img_ktp" />

    <Button
        android:id="@+id/btn_status"
        style="@style/Button.Border"
        android:layout_marginTop="8dp"
        android:backgroundTint="@color/white"
        android:text="@string/status"
        android:textColor="@color/primary_blue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_add" />

    <Button
        android:id="@+id/btn_logout"
        style="@style/Button.Large"
        android:layout_marginTop="8dp"
        android:text="Logout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_status" />

    <ImageView
        android:id="@+id/logo_team"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginBottom="30dp"
        android:contentDescription="@string/logo_team"
        android:src="@drawable/logo_team"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>