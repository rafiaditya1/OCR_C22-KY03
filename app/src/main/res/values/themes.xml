<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.OCR_C22KY03" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/primary_blue</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->

    </style>

    <style name="Text">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Text.Header">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Text.SubHeader">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Text.Title">
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/poppins_bold</item>
    </style>

    <style name="Text.Subtitle">
        <item name="android:textSize">10sp</item>
        <item name="android:fontFamily">@font/poppins_medium</item>
    </style>

    <style name="Text.Description">
        <item name="android:textSize">12sp</item>
        <item name="android:fontFamily">@font/poppins</item>
    </style>
</resources>